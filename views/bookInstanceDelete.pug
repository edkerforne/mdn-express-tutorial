extends layout

block content
  h1.heading #{title}: ##{bookInstance._id}
  h2.heading.subheading: em= bookInstance.book.title

  p Do you really want to delete this book copy?

  form(method='POST' action='').form
    input(
      type='hidden'
      name='id'
      required='true'
      value=bookInstance._id
    )

    button(type='submit').button.maintenance Delete
