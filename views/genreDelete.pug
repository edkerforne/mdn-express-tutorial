extends layout

block content
  h1.heading #{title}: #{genre.name}

  if books.length
    p
      | The following books must be deleted
      | before this genre can be deleted

    ul
      each book in books
        li: a(href=book.url)= book.title

  else
    p Do you really want to delete this genre?

    form(method='POST' action='').form
      input(
        type='hidden'
        name='id'
        required='true'
        value=genre._id
      )

      button(type='submit').button.maintenance Delete
